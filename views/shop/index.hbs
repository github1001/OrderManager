<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
       <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
       
          {{successMsg}}
       </div>

  </div>

</div>



{{#each products}}
   
<div class="row">

    {{#each this}}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="{{this.image}}" alt="..." class="img-responsive">
           <div class="caption">
              <h3>{{this.label}}</h3>
              <p class="description">{{this.description}}</p>
              
              
               <div class="clearfix">

                  <div class="price float-left">${{this.price}}</div>
              <a href="/addToCart/{{ this._id }}" class="btn btn-primary float-right" role="button">Add to cart</a>

                 </div>
           </div>

        </div>



    </div>
        {{/each}}
</div>



{{/each}}